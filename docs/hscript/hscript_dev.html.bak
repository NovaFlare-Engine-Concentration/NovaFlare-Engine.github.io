        }

        .intro-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            align-items: center;
        }

        .intro-text p {
            margin-bottom: 15px;
            font-size: 1.05rem;
        }

        .intro-features {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 20px;
        }

        .intro-features h3 {
            margin-bottom: 15px;
            color: var(--accent-color);
        }

