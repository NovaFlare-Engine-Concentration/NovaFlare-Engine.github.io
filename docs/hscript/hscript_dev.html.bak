        .code-copy {
            background: none;
            border: none;
            color: #ccc;
            cursor: pointer;
            font-size: 0.9rem;
        }

        pre[class*="language-"] {
            margin: 0;
            border-radius: 0;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .intro-content {
                grid-template-columns: 1fr;
            }
            
            .quick-links {
                grid-template-columns: 1fr;
            }
            
            .page-title {
                font-size: 2rem;
            }
